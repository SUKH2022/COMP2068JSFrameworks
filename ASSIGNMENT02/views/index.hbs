  <p class="author__body">Web developer and Creator of the Website.</p>
</div>

<img src="/img/robotai.jpg" alt="hacker img" class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
      {{#each data}}
      <li>
        <a href="/post/{{this._id}}">
          <span>{{this.title}}</span>
          <span class="article-list__date">{{formatDate this.createdAt 'ddd MMM DD YYYY'}}</span>
        </a>
      </li>
      {{/each}}
  </ul>

  {{#if nextPage}}
      <a href="/?page={{nextPage}}" class="pagination">&lt; View Older Posts</a>
  {{/if}}
</section>
